<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Plan It</title>
    <link rel="icon" href="/static/photos/thumbtag.png" type="image/x-icon" />
    <link rel="stylesheet" href="/static/style.css" />
    <script>
      let trips ={{{trips}}}
    </script>
    <!-- <script src="/static/script.js"></script> -->
    <script src="/static/alltrips.js"></script>

  </head>
  <body
    style="background-color:#818181;
  background-image:none;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-family:Inter;
"
  >

    {{! Overlay }}
    <div
      class="overlay overlay-slide-left overlay-media media-overlay"
      id="overlay"
    >
      <nav class="user-navbar">
        <form action="/" method="GET">
          <li class="overlay-home-button"><button
              style="font-family: Inter; "
            >Home</button></li>
          {{! <li class="overlay-trip-button" ><button style="font-family: Inter;">New Trip</button></li> }}
        </form>
        {{#if correctUser}}
          <form action="/alltrips" method="GET">
            <li class="all-trips-overlay-button"><button
                id="all-trips-btn"
                style="font-family: Inter; "
              >My Trips</button></li>

            <li class="media-overlay-trip-button" style="width:100%"><button
                id="media-overlay-trip-btn"
                style="font-family: Inter;"
              >New Trip</button></li>
          </form>
        {{/if}}
        {{!-- {{#if correctUser}} --}}
        {{!-- <li><a href="/{{loggedinuser.username}}"><button class="hidden" id="my-trip-button" style="font-family: Inter; ">My Trip</button></a></li> --}}
        {{!-- {{#else}} --}}
        <li><a href="/{{loggedinuser.username}}"><button
              id="my-trip-button"
              style="font-family: Inter; "
            >My Page</button></a></li>
        {{!-- {{/if}} --}}
        {{! Media addd trip input section div }}
        <div class="media-trip-container hidden" id="media-trip-container">
          <h3 class="from-h3">From:</h3>
          <input
            class="new-trip-from-date"
            id="media-new-trip-from-date"
            name="from"
            type="date"
          />
          <h3 class="to-h3">To:</h3>
          <input
            class="new-trip-to-date"
            id="media-new-trip-to-date"
            name="to"
            type="date"
          />
          <h3 class="where-h3">Where:</h3>
          <input
            class="new-trip-location"
            id="media-new-trip-location"
            type="text"
            placeholder="enter location"
          />
          <button class="post-trip-button" id="media-trip-button">post trip
            dates</button>
        </div>
        <form action="/" method="GET">
          <li class="overlay-friends-button"><button
              style="font-family: Inter;"
            >Visit Friends</button></li>
          {{! <li class="overlay-map-button" ><button style="font-family: Inter;">New Map</button></li> }}
        </form>
        {{#if correctUser}}
          <li class="media-overlay-map-button" style="width:100%"><button
              id="media-overlay-map-btn"
              style="font-family: Inter;"
            >New Map</button></li>
        {{/if}}
        <div class="media-map-container hidden" id="media-map-container">
          <input
            name="mappost"
            class="new-map-input"
            id="media-post-location-field"
            type="text"
            placeholder="search for place"
          />
          <input
            name="date"
            id="media-post-time"
            class="map-time-input"
            type="datetime-local"
          />
          <button class="post-location-button" id="media-post-map-button">post a
            place</button>

        </div>

        <form action="logout" method="GET">
          <li class="logout"><button style="font-family: Inter;">Log Out</button></li>
        </form>
      </nav>

    </div>
    <h1
      id="h1"
      style="font-family: Inter;
        color:#fff;
        font-size: 35px;
        background-color: rgba(255, 255, 255, 0);
        letter-spacing:2;
        font-weight:200;
        margin:45px;
        text-align:center"
    >
      ALL TRIPS</h1>
    <h2
      id="cur-trip-to-delete"
      style="font-family: Inter;
        color:#fff;
        font-size: 25px;
        background-color: rgba(255, 255, 255, 0);
        letter-spacing:2;
        font-weight:200;
        margin:25px;
        text-align:center"
    ></h2>
    <h2
      id="cur-trip-name"
      style="font-family: Inter;
        color:rgb(198, 17, 17);
        font-size: 30px;
        background-color: rgba(255, 255, 255, 0);
        letter-spacing:2;
        font-weight:400;
        margin:5px;
        text-align:center"
    ></h2>
    <h2
      class="test hidden"
      id="delete-ques-h2"
      style="font-family: Inter;
        color:#fff;
        font-size: 35px;
        background-color: rgba(255, 255, 255, 0);
        letter-spacing:2;
        font-weight:200;
        margin:45px;
        text-align:center"
    > Would You like to Delete this Trip Now? </h2>
    <div
      class="test hidden"
      id="yes-no-btns-container"
      style="display:flex; flex-direction:row; align-items:center; justify-content:center"
    >
      <div>
        <form action="GET">
          <button
            class="hidden"
            id="yes-btn"
            style="background:none"
          >Yes</button>
        </form>
      </div>
      <div>
        <button class="hidden" id="no-btn" style="background:none">No</button>
      </div>
    </div>
    <div
      class="delete-trips-container"
      id="delete-trips-container"
      style="
      height:500px;
      width:500px;
      display:flex;
      flex-direction:column;
      margin-left:50px
      "
    >

    </div>

  </body>
</html>